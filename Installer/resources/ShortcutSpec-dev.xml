<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <skipIfNotSupported/>

  <programGroup defaultName="$APP_NAME" location="applications"/>

   <shortcut
     name="DJ Tweak"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\DJ Tweak\DJTweak.jar"
     commandLine=""
     description="The main DJ Project utility, to tweak the integration behaviors">
     <createForPack name="DJ Tweak"/>
   </shortcut>

   <shortcut
     name="Read Me"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\readme.txt"
     commandLine=""
     description="General information about the DJ Project">
   </shortcut>

   <shortcut
     name="Website"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="http://djproject.sourceforge.net"
     commandLine=""
     description="The home of the DJ Project">
   </shortcut>

   <shortcut
     name="Uninstall DJ Project $APP_VER"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
     commandLine=""
     iconFile="%SystemRoot%\system32\SHELL32.dll"
     iconIndex="31"
     description="The uninstaller of the DJ Project">
   </shortcut>

</shortcuts>
